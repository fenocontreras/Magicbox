<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_picture"
    tools:context=".RegisterActivity">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:text="@string/prompt_register"
        android:textColor="#ffffff"
        android:textSize="40sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/et_enter_name"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_marginTop="48dp"
        android:background="@drawable/text_bar_picture"
        android:drawableStart="@drawable/entity_picture"
        android:drawablePadding="12dp"
        android:ems="10"
        android:hint="@string/prompt_name"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <EditText
        android:id="@+id/et_enter_surname"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_marginTop="28dp"
        android:ems="10"
        android:hint="@string/prompt_surname"
        android:inputType="textPersonName"
        android:background="@drawable/text_bar_picture"
        android:drawableStart="@drawable/entity_picture"
        android:drawablePadding="12dp"
        app:layout_constraintStart_toStartOf="@+id/et_enter_name"
        app:layout_constraintTop_toBottomOf="@+id/et_enter_name" />

    <EditText
        android:id="@+id/et_enter_email"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_marginTop="32dp"
        android:ems="10"
        android:hint="@string/prompt_email"
        android:inputType="textEmailAddress"
        android:background="@drawable/text_bar_picture"
        android:drawableStart="@drawable/email_picture"
        android:drawablePadding="12dp"
        app:layout_constraintStart_toStartOf="@+id/et_enter_surname"
        app:layout_constraintTop_toBottomOf="@+id/et_enter_surname" />

    <EditText
        android:id="@+id/et_enter_username"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_marginTop="36dp"
        android:ems="10"
        android:hint="@string/prompt_username"
        android:inputType="textPersonName"
        android:background="@drawable/text_bar_picture"
        android:drawableStart="@drawable/username_picture"
        android:drawablePadding="12dp"
        app:layout_constraintStart_toStartOf="@+id/et_enter_email"
        app:layout_constraintTop_toBottomOf="@+id/et_enter_email" />

    <EditText
        android:id="@+id/et_enter_password"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_marginTop="36dp"
        android:ems="10"
        android:hint="@string/prompt_password"
        android:inputType="textPassword"
        android:background="@drawable/text_bar_picture"
        android:drawableStart="@drawable/password_picture"
        android:drawablePadding="12dp"
        app:layout_constraintStart_toStartOf="@+id/et_enter_username"
        app:layout_constraintTop_toBottomOf="@+id/et_enter_username" />

    <EditText
        android:id="@+id/et_confirm_password"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_marginTop="36dp"
        android:background="@drawable/text_bar_picture"
        android:drawableStart="@drawable/password_picture"
        android:drawablePadding="12dp"
        android:ems="10"
        android:hint="@string/prompt_confirm_password"
        android:inputType="textPassword"
        app:layout_constraintStart_toStartOf="@+id/et_enter_password"
        app:layout_constraintTop_toBottomOf="@+id/et_enter_password" />

    <Switch
        android:id="@+id/sw_is_company"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:text=""
        app:layout_constraintEnd_toEndOf="@+id/et_confirm_password"
        app:layout_constraintTop_toBottomOf="@+id/et_confirm_password" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:text="@string/prompt_is_company"
        android:textColor="#ffffff"
        app:layout_constraintEnd_toStartOf="@+id/sw_is_company"
        app:layout_constraintTop_toTopOf="@+id/sw_is_company" />

    <ImageView
        android:id="@+id/img_register"
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:layout_marginTop="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:srcCompat="@drawable/register_button" />

</android.support.constraint.ConstraintLayout>
